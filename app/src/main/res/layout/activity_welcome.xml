<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gar_awgarrett.seeker.WelcomeActivity"
    android:background="@color/green">

    <ImageView
        android:id="@+id/seeker_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/bWSignIn"
        android:contentDescription="@string/image_seeker_description"
        android:src="@drawable/seekerlogo" />

    <Button
        android:id="@+id/bWSignIn"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_main"
        android:text="@string/button_name_sign_in"
        android:textColor="@android:color/white"
        android:textSize="22sp" />


    <Button
        android:id="@+id/bWSignUp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/bWSignIn"
        android:layout_below="@+id/bWSignIn"
        android:layout_marginTop="36dp"
        android:background="@drawable/button_main"
        android:text="@string/button_name_sign_up"
        android:textColor="@android:color/white"
        android:textSize="22sp" />
</RelativeLayout>
