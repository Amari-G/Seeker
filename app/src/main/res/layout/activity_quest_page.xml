<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    android:backgroundTint="@color/green"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrollView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:fontFamily="sans-serif"
        android:text="@string/title_activity_list_page"
        android:textSize="50sp"
        android:textStyle="bold|normal"/>

    <!--<ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:scrollbarStyle="insideInset">

    </ScrollView>-->

    <ImageButton
        android:id="@+id/bNBMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/CameraButton"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:tint="@android:color/holo_green_light"
        android:src="@android:drawable/ic_dialog_map" />

    <ImageButton
        android:id="@+id/CameraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/scrollView2"
        android:layout_marginBottom="13dp"
        android:background="@android:color/transparent"
        android:tint="@android:color/holo_green_light"
        android:src="@android:drawable/ic_menu_camera" />

    <ImageButton
        android:id="@+id/bNBList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/bNBMap"
        android:layout_marginEnd="21dp"
        android:background="@android:color/transparent"
        android:tint="@android:color/holo_green_light"
        android:src="@android:drawable/ic_menu_sort_by_size" />

    <Button
        android:id="@+id/bQMyQuests"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bQFind"
        android:layout_alignStart="@+id/bQFind"
        android:layout_marginBottom="35dp"
        android:background="@drawable/main_button"
        android:padding="10dp"
        android:text="@string/saved_quests"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bQFind"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/main_button"
        android:padding="10dp"
        android:text="@string/find_quest"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bQCreate"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bQFind"
        android:layout_below="@+id/bQFind"
        android:layout_marginTop="35dp"
        android:background="@drawable/main_button"
        android:padding="10dp"
        android:text="@string/create_quest"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>